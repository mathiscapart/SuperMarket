{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <style>
        .max-width-100 {
            width: 50%;
            aspect-ratio: 3/2;
            object-fit: contain;
            align-items: center;
        }
    </style>

    <div class="d-flex mt-4 ms-4" style="width: 600px">
            <div class="col">
                <div class="card h-100 ">
                    <div class="card-body text-bg-primary">
                        <h3 class="card-title">{{ category }}</h3>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <img src="{{ asset("category/" ~ category.picture) }}" class="card-img-top img-fluid max-width-100" alt="{{ category.picture }}">
                    </div>
                </div>
            </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3 ms-4">
        {% for i in products %}
            {% if i.isVisible == true %}
            <a href="{{ path('app_product', {'id': i.id}) }}">
                <div class="col">
                    <div class="card h-100 ">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="{{ asset("products/" ~ i.picture) }}" class="card-img-top img-fluid max-width-100" alt="{{ i.picture }}">
                        </div>
                        <div class="card-body text-bg-primary">
                            <h5 class="card-title">{{ i }}</h5>
                        </div>
                    </div>
                </div>
            </a>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}