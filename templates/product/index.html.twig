{% extends 'base.html.twig' %}

{% block title %}Product {{ product }}{% endblock %}

{% block body %}
    <style>
        .max-width-100 {
            width: 50%;
            aspect-ratio: 3/2;
            object-fit: contain;
            align-items: center;
        }
    </style>
    <h3 class="title mt-5 ms-5">{{ product }}</h3>
    <form method="post" action="{{ path('app_product_post', {'id': product.id}) }}">
        <img src="{{ asset("products/" ~ product.picture) }}" class="card-img-top img-fluid max-width-100" alt="{{ product.picture }}">
        <input type="number" class="form-control" name="quantity">
        <button class="btn btn-success" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart-fill me-2 mb-1" viewBox="0 0 16 16">
                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
            </svg>AJOUTER AU PANIER</button>
    </form>
{% endblock %}
